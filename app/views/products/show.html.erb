<!-- Display product stats and information -->
<%= @product.name %>
<p>

<!-- Determine the product's seller -->
<% seller = User.find(@product.user_id) %>
		Seller: <%= seller.first_name %> <%= seller.last_name%> <br>
</p>

<!-- Carry on with the stats -->
<p>
Category: <%=@product.category%>
</p>
Description: <%=@product.description%>
<p>
</p>
Auction End Date: <%=@product.end_date%>
<p>
Starting Price: <%=number_to_currency(@product.starting_price, :unit => "$")%>
</p>
Current Price: <%=number_to_currency(@product.current_price, :unit => "$")%>

<p>
Buy it Now Price: <%=number_to_currency(@product.buy_now_price, :unit => "$")%>
</p>

<!-- Bid and Buy now options for those that are logged in -->
<p>
<% if session[:user_id] %>
	<%= link_to "Buy It Now" %>
	</p>
	<%= form_for @product do |p| %>
		<label>
			Bid
			<br />
				<%= p.text_field :current_price %>
		</label>
	<%= p.submit "Bid" %>
	<% end %>
<% else %>
	You must be logged in to buy it now!
<% end %>
</p>

<!-- Link to return to the product list -->
<%= link_to "Product List", root_path %>
